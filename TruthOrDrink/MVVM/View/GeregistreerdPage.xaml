<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.GeregistreerdPage"
             xmlns:vm="clr-namespace:TruthOrDrink.MVVM.ViewModels"
             BackgroundColor="#004D4D">
    <!-- Main Grid Layout -->
    <ScrollView>
        <Grid>

            <!-- Define rows: One for the settings button, one for the rest of the page -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Define a single column -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Settings Button in the top-right -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- Placeholder for spacing -->
                    <ColumnDefinition Width="Auto" />
                    <!-- For the button -->
                </Grid.ColumnDefinitions>
            </Grid>
            <VerticalStackLayout Grid.Row="2" Spacing="50" Padding="20" HorizontalOptions="Center" >
                <Image
                    Margin="0,50,0,0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Source="Truthordrink.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="Truth or drink Symbol" />

                <Frame
                    Margin="0,-40,0,0"
                    CornerRadius="10"
                    Background="#98FBC5"
                    Padding="5"
                    HeightRequest="50"
                    WidthRequest="300"
                    HorizontalOptions="Center"
                    BackgroundColor="Transparent">
                    <Label Text="Je bent Geregistreerd"
                            TextColor="#003131"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        FontAttributes="Bold" />
                </Frame>

                <Button Text="Home Page"
                    Margin="0,40,0,0"
                    FontSize="Large"
                    BackgroundColor="#FF6F61"
                    CornerRadius="10"
                    HeightRequest="50"
                    WidthRequest="300"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Command="{Binding Geregistreerd}"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>