<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TruthOrDrink.MVVM.ViewModel"
             x:Class="TruthOrDrink.ManageQuestionPage"
             BackgroundColor="#004D4D">

    <ScrollView>
        <Grid RowDefinitions="Auto, *">
            <!-- Back Button -->
            <Button ImageSource="returnicon.png"
                    BackgroundColor="Transparent"
                    Command="{Binding ReturnCommand}"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Padding="5"
                    CornerRadius="25"
                    HeightRequest="40"
                    WidthRequest="50" />

            <!-- Main Content -->
            <VerticalStackLayout Grid.Row="1" Spacing="20" Padding="20" HorizontalOptions="Center">
                <!-- Logo -->
                <Image Source="Truthordrink.png"
                       HeightRequest="185"
                       Aspect="AspectFit"
                       HorizontalOptions="Center" />

                <!-- Questions List -->
                <Frame BorderColor="#98FBC5" BackgroundColor="#98FBC5" CornerRadius="10" Padding="10" HasShadow="True">
                    <CollectionView ItemsSource="{Binding UserQuestions}"
                    SelectionMode="Single"
                    SelectedItem="{Binding SelectedQuestion}"
                    HeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <SwipeView>
                                    <SwipeView.LeftItems>
                                        <SwipeItems>
                                            <SwipeItem Text="Delete"
                                       BackgroundColor="Red"
                                       Command="{Binding BindingContext.DeleteQuestionCommand, Source={RelativeSource AncestorType={x:Type local:ManageQuestionViewModel}}}"
                                       CommandParameter="{Binding .}" />
                                        </SwipeItems>
                                    </SwipeView.LeftItems>
                                </SwipeView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Frame>

                <!-- Edit Question Section -->
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Entry Placeholder="Edit Question"
                           Text="{Binding SelectedQuestion.QuestionText}" />
                    <Button 
                        Text="Save"
                        BackgroundColor="#FF6F61"
                        Margin="0,10,0,0"
                            Command="{Binding SaveQuestionCommand}" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>