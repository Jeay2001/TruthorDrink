<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.RegisterPage"
             xmlns:vm="clr-namespace:TruthOrDrink.MVVM.ViewModels"
             BackgroundColor="#004D4D">
    <ScrollView>
        <!-- Main Grid Layout -->
        <Grid>
            
        <!-- Define rows: One for the settings button, one for the rest of the page -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Define a single column -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Settings Button in the top-right -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- Placeholder for spacing -->
                    <ColumnDefinition Width="Auto" />
                    <!-- For the button -->
                </Grid.ColumnDefinitions>

                <Button ImageSource="returnicon.png"
                BackgroundColor="Transparent"
                Command="{Binding ReturnCommand}"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Padding="5"
                CornerRadius="25"
                HeightRequest="40"
                WidthRequest="50"
                Grid.Column="0" />
            </Grid>
            <VerticalStackLayout Grid.Row="2" Spacing="50" Padding="20" HorizontalOptions="Center" >
                <Image
                Margin="0,50,0,0"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Source="Truthordrink.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Truth or drink Symbol" />

                <Frame
                    Margin="0,-40,0,0"
                   CornerRadius="25"
                   BackgroundColor="Transparent"
                   Padding="5"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                    <Entry Placeholder="Name"
                       x:Name="NameEntry"
                       Text="{Binding Name}"
                       FontSize="16"
                       Margin="0"
                    />
                </Frame>
                <Frame
                   Margin="0,-50,0,0"
                   CornerRadius="25"
                   BackgroundColor="Transparent"
                   Padding="5"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                    <Entry Placeholder="EMAIL"
                       x:Name="EmailEntry"
                       Text="{Binding Email}"
                       FontSize="16"
                       Margin="0"
                        />
                </Frame>
                <Frame
                    Margin="0,-40,0,0"
                    CornerRadius="25"
                    BackgroundColor="Transparent"
                    Padding="5"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <Entry Placeholder="PASSWORD"
                        x:Name="PasswordEntry"
                        PlaceholderColor="DarkGrey"
                        Text="{Binding Password}"
                        FontSize="16"
                        IsPassword="True"
                        Margin="0"
                        />
                </Frame>
                <Frame
                    Margin="0,-50,0,0"
                    CornerRadius="25"
                    BackgroundColor="Transparent"
                    Padding="5"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <Entry Placeholder=" HERHAAL PASSWORD"
                        x:Name="ConfirmPasswordEntry"
                        Text="{Binding ConfirmPassword}"
                        PlaceholderColor="DarkGrey"
                        FontSize="16"
                        IsPassword="True"
                        Margin="0"
                    />
                </Frame>
                <Button Text="Registreren"
                    Margin="0,-20,0,0"
                    FontSize="Large"
                    BackgroundColor="#FF6F61"
                    CornerRadius="10"
                    HeightRequest="50"
                    WidthRequest="300"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Command="{Binding RegisterUser}"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>